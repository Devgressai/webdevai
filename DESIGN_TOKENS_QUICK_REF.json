{
  "colors": {
    "primary": {
      "main": "#4C74B9",
      "dark": "#004085",
      "usage": "Primary CTAs, links, brand elements"
    },
    "secondary": {
      "text": "#0f172a",
      "textMuted": "#64748b",
      "usage": "Body text, secondary elements"
    },
    "accent": {
      "main": "#f97316",
      "usage": "Highlights, badges, special emphasis"
    },
    "success": "#22c55e",
    "backgrounds": {
      "white": "#ffffff",
      "light": "#f8fafc",
      "gradientLight": "from-gray-50 via-white to-blue-50/30",
      "gradientDark": "from-slate-900 via-blue-900 to-slate-800"
    }
  },
  "typography": {
    "fontFamily": {
      "display": "Poppins",
      "body": "Inter"
    },
    "scale": {
      "h1": "text-5xl lg:text-7xl font-bold",
      "h2": "text-4xl lg:text-5xl font-bold",
      "h3": "text-2xl lg:text-3xl font-semibold",
      "body": "text-lg leading-relaxed",
      "bodySmall": "text-base"
    }
  },
  "spacing": {
    "container": "max-w-7xl mx-auto px-6 lg:px-8",
    "section": "py-24",
    "sectionSmall": "py-16",
    "card": "p-8",
    "gap": "gap-8"
  },
  "borderRadius": {
    "button": "rounded-xl",
    "card": "rounded-2xl",
    "badge": "rounded-full"
  },
  "shadows": {
    "card": "shadow-lg",
    "cardHover": "shadow-xl",
    "soft": "shadow-soft",
    "medium": "shadow-medium"
  },
  "components": {
    "button": {
      "primary": "bg-primary-600 hover:bg-primary-700 text-white",
      "gradient": "bg-gradient-to-r from-primary-500 to-primary-600",
      "outline": "border border-primary-600 text-primary-600 hover:bg-primary-50",
      "size": "h-11 px-8 (lg)"
    },
    "card": {
      "base": "bg-white rounded-2xl p-8 shadow-lg border border-gray-100",
      "hover": "hover:shadow-xl transition-all duration-300"
    },
    "badge": {
      "base": "inline-flex items-center rounded-full px-6 py-3 text-sm font-semibold",
      "gradient": "bg-gradient-to-r from-blue-500 to-indigo-500 text-white"
    },
    "iconBadge": {
      "base": "w-16 h-16 rounded-2xl flex items-center justify-center mb-6",
      "gradient": "bg-gradient-to-br from-blue-500 to-cyan-600"
    }
  },
  "gradients": {
    "primary": "from-primary-600 to-primary-500",
    "blueIndigo": "from-blue-500 to-indigo-500",
    "blueCyan": "from-blue-400 to-cyan-500",
    "purpleIndigo": "from-purple-500 to-indigo-600",
    "greenEmerald": "from-green-500 to-emerald-600",
    "orangeRed": "from-orange-500 to-red-600"
  },
  "icons": {
    "library": "lucide-react",
    "sizes": {
      "small": "w-4 h-4",
      "medium": "w-5 h-5",
      "large": "w-8 h-8"
    },
    "common": {
      "MapPin": "Location pages",
      "CheckCircle": "Feature lists (text-green-500)",
      "ArrowRight": "CTAs",
      "Star": "Ratings (text-yellow-400)",
      "Zap": "AI/Speed features",
      "HelpCircle": "FAQ sections"
    }
  },
  "layouts": {
    "serviceGrid": "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8",
    "statsGrid": "grid grid-cols-2 lg:grid-cols-4 gap-8",
    "twoColumn": "grid grid-cols-1 lg:grid-cols-2 gap-12"
  },
  "sectionBackgrounds": {
    "light": "bg-gradient-to-br from-gray-50 via-white to-blue-50/30",
    "white": "bg-white",
    "dark": "bg-gradient-to-br from-primary-600 via-primary-700 to-secondary-800",
    "darkAlt": "bg-slate-800"
  }
}

