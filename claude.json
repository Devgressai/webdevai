  "file_organization": {
    "app": {
      "description": "Next.js app directory",
      "important_files": [
        "app/layout.tsx",
        "app/page.tsx",
        "app/sitemap.ts",
        "app/services/geo-[city]/page.tsx"
      ]
    },
    "lib": {
      "description": "Utility and helper functions",
      "files": [
        "lib/cities.ts - City configuration data",
        "lib/industries.ts - Industry categories",
        "lib/clean-schema-generator.ts - JSON-LD generation"
      ]
    },
    "components": {
      "description": "Reusable React components",
      "patterns": "One component per file"
    },
    "public": {
      "description": "Static files and configuration",
      "files": [
        "public/robots.txt",
        "public/sitemap.xml (generated)"
      ]
    }
  },
  "task_templates": {
    "create_new_geo_page": {
      "steps": [
        "Create /app/services/geo-[city-slug]/ directory",
        "Copy structure from geo-austin template",
        "Update city-specific values (name, state, population, etc.)",
        "Write unique H1, title, description, keywords",
        "Create 8 unique FAQs for the city",
        "Update gradient colors (use different color per city)",
        "Add 6 city-relevant industries",
        "Generate neighborhoods list for city",
        "Update schema markup with city info",
        "Test mobile and desktop rendering",
        "Update app/sitemap.ts to include new page",
        "Update public/robots.txt with Allow directive"
      ],
      "validation_checklist": [
        "Title ≤ 60 characters",
        "Meta description ≤ 155 characters",
        "No duplicate wording with other cities",
        "All 7 content sections present",
        "8 FAQs minimum",
        "Schema markup validates",
        "No TypeScript errors",
        "Mobile responsive",
        "All internal links working"
      ]
    },
    "update_existing_page": {
      "guidelines": [
        "Never modify existing GEO pages without explicit approval",
        "If updates needed: create separate branch",
        "Test thoroughly in production build",
        "Preserve all existing content structure",
        "Only update metadata if outdated",
        "Verify no breaking changes to links"
      ]
    }
  },
  "performance_optimization": {
    "targets": {
      "page_load_time": "< 2 seconds",
      "lighthouse_mobile": "> 90",
      "lighthouse_desktop": "> 95",
      "core_web_vitals": "All green"
