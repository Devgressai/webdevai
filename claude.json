  "settings": {
    "model": "claude-3-5-haiku",
    "max_tokens": 4096,
    "temperature": 0.7,
    "context_window": "use_full"
  },
  "project_context": {
    "type": "Next.js Web Application",
    "industry": "Digital Marketing / SEO / AI Services",
    "primary_service": "Generative Engine Optimization (GEO)",
    "target_markets": "79 US cities",
    "company_website": "https://www.webvello.com"
  },
  "code_style_preferences": {
    "language": "TypeScript",
    "framework": "Next.js 14+",
    "styling": "Tailwind CSS",
    "type_safety": "strict",
    "naming_convention": "camelCase for functions, PascalCase for components",
    "max_line_length": 100,
    "indentation": "2 spaces"
  },
  "content_creation_guidelines": {
    "seo": {
      "title_limit": 60,
      "meta_description_limit": 155,
      "ensure_uniqueness_across_pages": true,
      "keywords_per_page": 4,
      "focus": "AI search optimization and GEO"
    },
    "tone_and_voice": {
      "overall_tone": "Expert, professional, transparent",
      "audience": "Business owners seeking AI visibility",
      "avoid": "Hype, false claims, fake data",
      "emphasize": "Real value, remote service delivery, measurable results"
    },
    "compliance": {
      "no_fake_addresses": true,
      "no_fake_phone_numbers": true,
      "no_fake_ratings_or_reviews": true,
      "no_invented_claims": true,
      "verified_data_only": true
    }
  },
  "geo_pages_specification": {
    "total_pages": 79,
    "newly_created": 49,
    "page_structure": {
      "hero_section": "City-specific headline with gradient background",
      "value_proposition": "2-3 sentence direct answer in highlighted box",
      "why_geo_matters": "Location-specific context and competitive urgency",
      "how_we_deliver": "3-point remote service explanation",
      "process_section": "5-step methodology with numbered steps",
      "industries_served": "6 city-specific industries with descriptions",
      "faq_section": "Minimum 8 unique Q&As addressing common objections",
      "cta_section": "Dual buttons: audit + learn more"
    },
    "content_requirements": {
      "sections_minimum": 7,
      "faqs_minimum": 8,
      "unique_wording_between_cities": true,
      "ai_citation_optimization": true,
      "voice_search_optimization": true
    },
    "schema_requirements": {
      "types": ["Service", "FAQPage", "Breadcrumb"],
      "include_address": false,
      "include_fake_data": false,
      "validate_with": "Google Rich Results Test"
    }
  },
  "recent_project_completion": {
    "project_name": "GEO Expansion 49 Cities",
    "completion_date": "2025-12-16",
    "status": "COMPLETE",
    "deliverables": {
      "pages_created": 49,
      "geographic_expansion": "30 → 79 cities (+163%)",
      "total_content_lines": 20905,
      "total_faqs": 392,
      "schema_implementations": "49 Service + 49 FAQ + 49 Breadcrumb",
      "sitemap_updated": true,
      "robots_txt_updated": true,
      "git_commits": 4,
      "deployment_status": "LIVE"
    }
